@using ResumeSiteWithMvc.Models.entity
@model List<tblHakkimda>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<h2>Index</h2>
    <table class=" table table-bordered">
        <tr>
            <th>Id</th>
            <th>Ad Soyad</th>
            <th>Adres</th>
            <th>Telefon</th>
            <th>Mail</th>
            <th>Açıklama</th>
            <th>Fotoğraf Linki</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        <tbody>
            @foreach (var i in Model)
            {
                <tr>
                    <td>@i.Id</td>
                    <td>@i.ad  @i.soyad</td>
                    <td>@i.adres</td>
                    <td>@i.telefon</td>
                    <td>@i.mail</td>
                    <td>@i.aciklama</td>
                    <td>@i.fotograf</td>
                    <td><a href="/hakkimda/hakkimdaSil/@i.Id" class="btn btn-warning">Sil</a></td>
                    <td><a href="/hakkimda/hakkimdaGuncellemeSayfasi/@i.Id" class="btn btn-success">Güncelle</a></td>
                </tr>
            }
        </tbody>
    </table>

    <a href="/hakkimda/hakkimdaEkle" class="btn btn-primary">Hakkımda Ekle</a>

