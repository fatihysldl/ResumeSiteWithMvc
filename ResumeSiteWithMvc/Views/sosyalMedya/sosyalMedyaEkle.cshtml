@model ResumeSiteWithMvc.Models.entity.tblSocialMedia
@{
    ViewBag.Title = "sosyalMedyaEkle";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<h2>sosyalMedyaEkle</h2>

@using (Html.BeginForm("sosyalMedyaEkle", "SosyalMedya", FormMethod.Post))
{
    <div class="form-group">
        <label>Sosyal Medya Adı</label>
        @Html.TextBoxFor(i => i.sosyalMedyaAd, new { @class = "form-control" })
        @Html.ValidationMessageFor(i => i.sosyalMedyaAd, "", new { @style = "color:red;" })
    </div>
    <div class="form-group">
        <label>Sosyal Medya Linki</label>
        @Html.TextBoxFor(i => i.sosyalMedyaLink, new { @class = "form-control" })
        @Html.ValidationMessageFor(i => i.sosyalMedyaLink, "", new { @style = "color:red;" })
    </div>
    <div class="form-group">
        <label>Sosyal Medya İcon Linki</label>
        @Html.TextBoxFor(i => i.iconLink, new { @class = "form-control" })
        @Html.ValidationMessageFor(i => i.iconLink, "", new { @style = "color:red;" })

    </div>
    <button class="btn btn-primary">Sosyal Medya Ekle</button>
    @Html.HiddenFor(i => i.id)
}

