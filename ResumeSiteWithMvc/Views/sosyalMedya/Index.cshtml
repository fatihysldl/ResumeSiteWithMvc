@using ResumeSiteWithMvc.Models.entity
@model List<tblSocialMedia>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<h2>Sosyal Medya Hesapları</h2>

<table class=" table-bordered col-md-12">
    <tr>
        <th>Id</th>
        <th>Sosyal Medya Ad</th>
        <th>Sosyal Medya Link</th>
        <th>Sosyal Medya İcon Link</th>
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>

    <tbody>
        @foreach(var i in Model)
            {
                <tr>
                    <td>@i.id</td>
                    <td>@i.sosyalMedyaAd</td>
                    <td>@i.sosyalMedyaLink</td>
                    <td>@i.iconLink</td>
                    <td><a href="/sosyalMedya/sosyalMedyaSil/@i.id" class="btn btn-warning">Sil</a></td>
                    <td><a href="/sosyalMedya/sosyalMedyaGuncellemeSayfasi/@i.id" class="btn btn-success">Güncelle</a></td>
                </tr>
            }
    </tbody>
</table>
<br />
<a href="/sosyalMedya/sosyalMedyaEkle" class="btn btn-primary">Sosyal Medya Hesabı Ekle</a>