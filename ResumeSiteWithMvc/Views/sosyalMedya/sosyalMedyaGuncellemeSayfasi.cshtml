@model ResumeSiteWithMvc.Models.entity.tblSocialMedia
@{
    ViewBag.Title = "sosyalMedyaGuncellemeSayfasi";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<h2>Sosyal Medya Güncelleme Sayfası</h2>

@using (Html.BeginForm("sosyalMedyaGuncellemeSayfasi", "SosyalMedya", FormMethod.Post))
{
    <div class="form-group">
        <label>Sosyal Medya Adı</label>
        @Html.TextBoxFor(i => i.sosyalMedyaAd, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Sosyal Medya Linki</label>
        @Html.TextBoxFor(i => i.sosyalMedyaLink, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Sosyal Medya İcon Linki</label>
        @Html.TextBoxFor(i => i.iconLink, new { @class = "form-control" })
    </div>
    <button class="btn btn-primary">Sosyal Medya Güncelle</button>
    @Html.HiddenFor(i => i.id)
}
